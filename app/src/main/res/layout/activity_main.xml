<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nikhil.detectcall.MainActivity">

    <EditText
        android:id="@+id/SenderEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv"
        android:layout_alignStart="@+id/ReceiverEmail"
        android:layout_marginTop="26dp"
        android:hint="Sender Email" />

    <EditText
        android:id="@+id/Email_Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SenderEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:hint="Password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/ReceiverEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Email_Password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:hint="Receiver Email" />

    <EditText
        android:id="@+id/Mpin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ReceiverEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:hint="Please Set Your Pin" />

    <Button
        android:id="@+id/Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Mpin"
        android:layout_alignEnd="@+id/Email_Password"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"

        android:text="Save" />

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="..."
        />


</RelativeLayout>
